# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Port
PORT=5000

# Environment (development, production)
NODE_ENV=development

# MongoDB Atlas Connection String
# Get this from MongoDB Atlas dashboard or using Atlas CLI
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/portfolio-generator?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/portfolio-generator?retryWrites=true&w=majority

# JWT Secret for authentication
# Generate a secure one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_change_this_in_production
